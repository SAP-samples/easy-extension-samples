<config xmlns="http://www.hybris.com/cockpit/config">

    <context type="EasyApiKey">

        <context merge-by="type" component="explorer-tree">
            <n:explorer-tree xmlns:n="http://www.hybris.com/cockpitng/config/explorertree">
                <n:navigation-node id="hmc_navnode_easy" merge-mode="append">
                    <n:navigation-node id="hmc_navnode_easyrest" merge-mode="append">
                        <n:type-node code="EasyApiKey" id="hmc.easyapikey.apikey"/>
                    </n:navigation-node>
                </n:navigation-node>
            </n:explorer-tree>
        </context>

        <context component="base" merge-by="type" parent="GenericItem">
            <y:base xmlns:y="http://www.hybris.com/cockpit/config/hybris">
                <y:labels>
                    <y:label>id</y:label>
                </y:labels>
            </y:base>
        </context>

        <context component="simple-search" merge-by="type" parent="GenericItem">
            <ss:simple-search xmlns:ss="http://www.hybris.com/cockpitng/config/simplesearch">
                <ss:field name="id"/>
            </ss:simple-search>
        </context>

        <context component="advanced-search" merge-by="type" parent="GenericItem">
            <as:advanced-search xmlns:as="http://www.hybris.com/cockpitng/config/advancedsearch">
                <as:field-list>
                    <as:field name="id" selected="true"/>
                    <as:field name="key" selected="true"/>
                </as:field-list>
            </as:advanced-search>
        </context>

        <context component="listview" merge-by="type">
            <list-view:list-view xmlns:list-view="http://www.hybris.com/cockpitng/component/listView">
                <list-view:column qualifier="id" position="1"/>
                <list-view:column qualifier="key" position="2"/>
            </list-view:list-view>
        </context>

        <context component="editor-area" merge-by="type">
            <editorArea:editorArea xmlns:editorArea="http://www.hybris.com/cockpitng/component/editorArea">
                <editorArea:essentials>
                    <editorArea:essentialSection name="hmc.essential">
                        <editorArea:attribute qualifier="id"/>
                        <editorArea:attribute qualifier="key"/>
                    </editorArea:essentialSection>
                </editorArea:essentials>
            </editorArea:editorArea>
        </context>
    </context>

</config>
